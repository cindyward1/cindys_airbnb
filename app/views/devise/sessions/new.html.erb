<% content_for(:title, "Log In | Cindy's Airbnb!") %>
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div><%= f.label :username %>&nbsp&nbsp&nbsp
  <%= f.text_field :username, autofocus: true %><br><br></div>

  <div><%= f.label :password %>&nbsp&nbsp
    <%= f.password_field :password, autocomplete: "off" %><br><br></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %><br><br></div>
  <% end -%>

  <div><%= f.submit "Log in" %><br><br></div>
<% end %>

<%= render "devise/shared/links" %>

<% content_for(:title, "Forgotten Password | Cindy's Airbnb!") %>
<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %>&nbsp&nbsp
  <%= f.email_field :email, autofocus: true %><br><br></div>

  <div><%= f.submit "Send me reset password instructions" %><br><br></div>
<% end %>

<%= render "devise/shared/links" %>

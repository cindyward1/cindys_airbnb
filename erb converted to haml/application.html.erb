<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= flash[:alert] %>
<%= flash[:notice] %>

<div class='container'>
  <div class='row'>
    <h1><%= image_tag('logo.png', class: 'pull-left padding-right', width: '200') %><b>Cindy's Airbnb!</b></h1>
    <h4><span class="smaller">Current user:&nbsp&nbsp</span>
      <% if current_user.nil? %>
        <u>No user logged in yet</u>
      <% else %>
        <%= current_user.username %> at <%= current_user.email %>
      <% end %>
    </span></h4>
  </div><br>

<%= yield %>

</div>
</body>
</html>
